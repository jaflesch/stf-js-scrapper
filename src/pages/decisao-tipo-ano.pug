  script.
    $(document).ready(() => {
      Chart.register(ChartDataLabels);
      const dt = !{ chart };
      const labelYears = {};      
      const datasetGroups = {};
      const colors = ['#4771b5', '#da3e3e'];

      for (const d of dt) {
        if (labelYears[d.year] === undefined) {
          labelYears[d.year] = 1;
        }
        if (datasetGroups[d.decisionText] === undefined) {
          datasetGroups[d.decisionText] = [];
        }
      }

      const groupKeys = Object.keys(datasetGroups)
      for (const d of dt) {
        for (const key of groupKeys) {
          if (key === d.decisionText) {
            datasetGroups[d.decisionText].push(d.count)
          }
        }         
      }
      
      const labels = Object.keys(labelYears);
      const datasets = [
        {
          label: groupKeys[0],
          backgroundColor: colors[0],
          data: datasetGroups[groupKeys[0]],
          datalabels: {
            color: '#fff',
            anchor: 'center',
            align: 'center',
            font: {
              size: 11,
            }
          },
        },
        {
          label: groupKeys[1],
          backgroundColor: colors[1],
          data: datasetGroups[groupKeys[1]],
          datalabels: {
            color: '#fff',
            anchor: 'center',
            align: 'center',
            font: {
              size: 11,
            }
          }
        },
      ];

      const data = { labels, datasets };
      const config = {
        type: 'bar',
        data: data,
        options: {
          responsive: true,
          hover: { mode: null },
          plugins: {
            legend: {
              display: false,
            },
            title: {
              display: false,
            },
          },
          scales: {
            x: {
              stacked: true,
            },
            y: {
              stacked: true
            }
          }
        },
        tooltips: {
          enabled: false
        },
      };

      const myChart = new Chart(
        $('#myChart'), config
      );  

      const keys = Object.keys(datasetGroups).filter(k => !!k);
      $('#chart-labels').html(
        keys.map((l, i) => {
          return `
            <div style="display:flex;gap: 8px;align-items: center;">
              <div style='background-color:${colors[i]};width:28px;height:28px;'></div>
              <span style='font-size: 14px;font-weight: 600'>${keys[i]}</span>
            </div>
          `;
        }).join('')
      ).show().css('display', 'flex');          
    });
    
    