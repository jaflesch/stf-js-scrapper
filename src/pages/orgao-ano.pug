extends templates/layout

block variables 
  - var page_title = 'Órgão julgador por ano';

append title 
    title= (page_title || 'LEAF | UFRGS 2022')

block chart 
  div(style="width:80%; height:auto;")
    canvas#myChart 
    div 
      p#chart
  
  script.
    $(document).ready(() => {
      Chart.defaults.set('plugins.datalabels', {
        color: '#FE777B'
      });

      const dt = !{ chart };

      const datasetGroups = {};
      const labelYears = {};      
      for (const d of dt) {
        if (labelYears[d.year] === undefined) {
          labelYears[d.year] = 1;
        }
        if (datasetGroups[d.judicialBody] === undefined) {
          datasetGroups[d.judicialBody] = [];
        }
      }

      const groupKeys = Object.keys(datasetGroups)
      for (const d of dt) {
        for (const key of groupKeys) {
          if (key === d.judicialBody) {
            datasetGroups[d.judicialBody].push(d.count)
          }
        }         
      }
      
      const labels = Object.keys(labelYears);
      const datasets = [
        {
          label: groupKeys[0],
          backgroundColor: 'magenta',
          data: datasetGroups[groupKeys[0]],
        },
        {
          label: groupKeys[1],
          backgroundColor: 'cyan',
          data: datasetGroups[groupKeys[1]],
        },
       {
          label: groupKeys[2],
          backgroundColor: 'yellow',
          data: datasetGroups[groupKeys[2]],
        },
      ];

      const data = { labels, datasets };
      const config = {
        type: 'bar',
        data: data,
        options: {
          responsive: true,
          plugins: {
            legend: {
              position: 'right',
              display: true,
            },
            title: {
              display: true,
              text: 'Acórdãos / Ano'
            },
          },
        },
        tooltips: {
          enabled: false
        },
        animation: {
          duration: 0,
          onComplete: function () {
            var ctx = this.chart.ctx;
            ctx.font = Chart.helpers.fontString(Chart.defaults.global.defaultFontSize, 'normal', Chart.defaults.global.defaultFontFamily);
            ctx.fillStyle = this.chart.config.options.defaultFontColor;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'bottom';
            this.data.datasets.forEach(function (dataset) {
              for (var i = 0; i < dataset.data.length; i++) {
                var model = dataset._meta[Object.keys(dataset._meta)[0]].data[i]._model;
                ctx.fillText(dataset.data[i], model.x, model.y - 5);
              }
            });
          }
        }
      };

      const myChart = new Chart(
        $('#myChart'), config
      );  
    });
    